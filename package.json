{
  "name": "drawing-qc-app",
  "version": "1.0.0",
  "description": "Modern Drawing QC Application for Engineering Quality Control",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "minify": "terser script-clash.js -o script-clash.min.js --compress --mangle",
    "minify-css": "cssnano styles-clash.css styles-clash.min.css",
    "lint": "eslint script-clash.js",
    "lint:css": "stylelint styles-clash.css",
    "test": "jest",
    "test:e2e": "playwright test",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "clean": "rimraf dist archived-files",
    "archive": "mkdir archived-files && mv script.js styles.css styles-modern.css styles_backup.css table-diagnostic.js test-table-fix.html CHART_FIXES_SUMMARY.md FIX-INSTRUCTIONS.md archived-files/",
    "optimize": "npm run minify && npm run minify-css && npm run archive",
    "build:dev": "vite build --mode development"
  },
  "keywords": [
    "quality-control",
    "engineering",
    "drawings",
    "excel",
    "validation"
  ],
  "author": "Rubens Lage",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.38.1",
    "@vitejs/plugin-legacy": "^4.1.1",
    "cssnano": "^6.0.1",
    "eslint": "^9.32.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "stylelint": "^15.10.3",
    "terser": "^5.19.2",
    "vite": "^4.4.9",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "dependencies": {
    "@eslint/js": "^9.32.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "globals": "^15.15.0",
    "lovable-tagger": "^1.1.9",
    "lucide-react": "^0.468.0",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "xlsx": "^0.18.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
